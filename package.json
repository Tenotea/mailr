{
  "name": "mailr-api",
  "version": "1.0.0",
  "description": "A web mailing app's api. This will be used with mailR",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "pm2 start dist/server.js --no-daemon",
    "dev": "nodemon --watch src -e ts --exec npm run start",
    "prod": "pm2 start dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tenotea/mailr.git"
  },
  "keywords": [
    "api",
    "typescript",
    "node"
  ],
  "author": "Tenote",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Tenotea/mailr/issues"
  },
  "homepage": "https://github.com/Tenotea/mailr#readme",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/passport": "^1.0.4",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-google-oauth20": "^2.0.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.0",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "tslint": "^6.1.3"
  },
  "nodemonConfig": {
    "events": {
      "restart": "pm2 stop dist/server.js"
    }
  }
}
